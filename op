class Student: 
    school="Akirachix"
    def __init__(self,name,age,country):
        self.name=name
        self.age=age
        self.country=country
        
    def greet(self):
        return f"Hello {self.name} welcome to {self.school} how is {self.country}"
    
    class Bank: 
    
     def __init__(self,account_name,account_number,bank_name,account_balance,pin):
        self.account_name=account_name
        self.account_number=account_number
        self.account_balance=account_balance
        self.pin=pin
        self.bank_name=bank_name
    class Account:
    
     def __init__(self,name,pin,amount,type):   
        self.name=name  
        self.pin=pin
        self.amount=amount
        self.type=type      